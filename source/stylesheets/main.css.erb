<%= Rouge::Themes::Base16::Monokai.render(:scope => '.highlight') %>

*, *:before, *:after {
  box-sizing: border-box;
}

aside {
  float: right;
  padding: 15px;
  width: 20%;
  padding-left: 25px;
  border-right: 3px dashed black;
  border-bottom: 3px dashed black;
  border-radius: 15px;
  border-bottom-left-radius: 0;
}

#main {
  float: left;
  width: 75%;
  padding: 25px;
  border-left: 3px dashed black;
  /*border-right: 3px dashed black;*/
  border-bottom: 3px dashed black;
  border-radius: 15px;
  border-bottom-left-radius: 0;
  padding-right: 50px;
  padding-left: 75px;
  padding-top: 25px;
  /*margin-left: 25px;*/
}

.THEMAIN{
  border: 3px dashed black;
  border-radius: 15px;
  background-color: lightgreen;
  padding: 15px;
}

.header {
  width:100% !important;
  border: 3px dashed black;
  border-radius: 15px;
}

@media (max-width: 750px) {
  #main{
    width: 100%;
  }
  aside {
    width: 100%;
  }
}

h1, h2, h3, h4{
  font-family: Arial, Helvetica, sans-serif;
}

p {
  font-family: Georgia, serif
}

#contact {
  font-size: 25px;
}


img {
  width: 100%;
}

center img {
 width: 50% !important;
}

center p {
  width: 50%;
}



